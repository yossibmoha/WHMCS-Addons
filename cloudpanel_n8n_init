    NC='\033[0m' # No Color
    
    # Function to check service status
    check_service() {
        local service_name=$1
        local port=$2
        local url=$3
        
        echo -n "ğŸ” Checking $service_name service... "
        if systemctl is-active --quiet $service_name; then
            echo -e "${GREEN}âœ… RUNNING${NC}"
            
            # Check if port is listening
            if [ ! -z "$port" ]; then
                echo -n "ğŸ” Checking $service_name port $port... "
                if netstat -tlnp | grep -q ":$port "; then
                    echo -e "${GREEN}âœ… LISTENING${NC}"
                else
                    echo -e "${RED}âŒ NOT LISTENING${NC}"
                fi
            fi
            
            # Check web interface if URL provided
            if [ ! -z "$url" ]; then
                echo -n "ğŸ” Checking $service_name web interface... "
                if curl -s --connect-timeout 10 "$url" > /dev/null 2>&1; then
                    echo -e "${GREEN}âœ… ACCESSIBLE${NC}"
                else
                    echo -e "${YELLOW}âš ï¸ NOT ACCESSIBLE${NC}"
                fi
            fi
        else
            echo -e "${RED}âŒ NOT RUNNING${NC}"
        fi
        echo ""
    }
    
    # Function to get server IP
    get_server_ip() {
        curl -s ifconfig.me 2>/dev/null || curl -s ipinfo.io/ip 2>/dev/null || echo "Unable to determine IP"
    }
    
    echo "ğŸ“Š SYSTEM INFORMATION"
    echo "===================="
    echo "ğŸ–¥ï¸  Server IP: $(get_server_ip)"
    echo "ğŸ“… Current Time: $(date)"
    echo "ğŸ‘¤ Current User: $(whoami)"
    echo ""
    
    echo "ğŸ”§ SERVICE STATUS CHECK"
    echo "======================"
    
    # Check all services
    check_service "cloudpanel" "8443" "https://localhost:8443"
    check_service "n8n" "5678" "http://localhost:5678"
    check_service "mysql" "3306" ""
    check_service "nginx" "80" "http://localhost"
    
    echo "ğŸŒ WEB INTERFACE ACCESS"
    echo "======================"
    SERVER_IP=$(get_server_ip)
    echo "ğŸŒ CloudPanel: https://$SERVER_IP:8443"
    echo "ğŸ”§ n8n: http://$SERVER_IP"
    echo "ğŸ”§ n8n Direct: http://$SERVER_IP:5678"
    echo ""
    
    echo "ğŸ” CREDENTIALS CHECK"
    echo "==================="
    
    # Check CloudPanel credentials
    echo -n "ğŸ” Checking CloudPanel credentials... "
    if [ -f "/home/clp/.clp-installation" ]; then
        echo -e "${GREEN}âœ… FOUND${NC}"
        echo "ğŸ“‹ CloudPanel credentials location: /home/clp/.clp-installation"
    else
        echo -e "${YELLOW}âš ï¸ NOT FOUND${NC}"
    fi
    
    # Check n8n database credentials
    echo -n "ğŸ” Checking n8n database connection... "
    if mysql -u n8n_user -p'n8n_secure_password_2024' -h localhost n8n_db -e "SELECT 1;" > /dev/null 2>&1; then
        echo -e "${GREEN}âœ… CONNECTED${NC}"
    else
        echo -e "${RED}âŒ CONNECTION FAILED${NC}"
    fi
    echo ""
    
    echo "ğŸ“Š INSTALLATION SUMMARY"
    echo "======================"
    
    # Count successful services
    services_running=0
    total_services=4
    
    if systemctl is-active --quiet cloudpanel; then ((services_running++)); fi
    if systemctl is-active --quiet n8n; then ((services_running++)); fi
    if systemctl is-active --quiet mysql; then ((services_running++)); fi
    if systemctl is-active --quiet nginx; then ((services_running++)); fi
    
    echo "ğŸ“ˆ Services Running: $services_running/$total_services"
    
    if [ $services_running -eq $total_services ]; then
        echo -e "${GREEN}ğŸ‰ INSTALLATION SUCCESSFUL!${NC}"
        echo -e "${GREEN}âœ… All services are running properly${NC}"
    elif [ $services_running -ge 2 ]; then
        echo -e "${YELLOW}âš ï¸ INSTALLATION PARTIALLY SUCCESSFUL${NC}"
        echo -e "${YELLOW}âš ï¸ Some services may need attention${NC}"
    else
        echo -e "${RED}âŒ INSTALLATION FAILED${NC}"
        echo -e "${RED}âŒ Most services are not running${NC}"
    fi
    
    echo ""
    echo "ğŸ“ Support: support@vps-server.host"
    echo "ğŸ“‹ Run 'sudo check-installation' anytime to verify installation"
    EOF
  - chmod +x /usr/local/bin/check-installation
  - echo "[$(date '+%Y-%m-%d %H:%M:%S')] âœ… Installation verification script created" | tee -a /var/log/deployment/main-install.log
  
