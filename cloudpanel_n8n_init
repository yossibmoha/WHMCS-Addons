  - echo "[$(date '+%Y-%m-%d %H:%M:%S')] âœ… MOTD updated with success status" | tee -a /var/log/deployment/main-install.log
  
  # Display final information
  - echo "[$(date '+%Y-%m-%d %H:%M:%S')] ğŸ‰ Deployment completed successfully!" | tee -a /var/log/deployment/main-install.log
  - echo "[$(date '+%Y-%m-%d %H:%M:%S')] ğŸ“Š Service URLs:" | tee -a /var/log/deployment/main-install.log
  - echo "[$(date '+%Y-%m-%d %H:%M:%S')]    CloudPanel: https://$(curl -s ifconfig.me):8443" | tee -a /var/log/deployment/main-install.log
  - echo "[$(date '+%Y-%m-%d %H:%M:%S')]    n8n: http://$(curl -s ifconfig.me)" | tee -a /var/log/deployment/main-install.log
  - echo "[$(date '+%Y-%m-%d %H:%M:%S')] ğŸ“ Support: support@vps-server.host" | tee -a /var/log/deployment/main-install.log
  - echo "[$(date '+%Y-%m-%d %H:%M:%S')] ğŸ“‹ Log files available in /var/log/deployment/ and /var/log/cloudpanel-installation/ and /var/log/n8n-installation/" | tee -a /var/log/deployment/main-install.log

