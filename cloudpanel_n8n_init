  - mkdir -p /var/log/deployment
  - echo "[$(date '+%Y-%m-%d %H:%M:%S')] ğŸš€ Starting CloudPanel V2 + n8n deployment..." | tee -a /var/log/deployment/main-install.log
  
  # Update system packages with retry logic
